{% if hasPermission('ZikulaAdminModule::', '::', 'ACCESS_ADMIN') %}
    {% if developer.mode != 'prod' %}
        <!-- Notifications: style can be found in dropdown.less -->
        <li class="dropdown notifications-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-exclamation-triangle text-danger"></i>
            </a>
            <ul class="dropdown-menu">
                <li class="header">{{ __('Developer notices') }}</li>
                <li>
                    <!-- inner menu: contains the actual data -->
                    <ul class="menu">
                        <li>
                            <div class="col-sm-12">
                                {{ __('Mode') }}: {{ developer.mode }}
                            </div>
                        </li>
                        <li>
                            <div class="col-sm-12">
                                {{ __('Debug enabled') }}: {{ developer.debug }}
                            </div>
                        </li>
                    </ul>
                </li>
                <li class="footer"><a href="#">{{ __('development mode on') }}</a></li>
            </ul>
        </li>
    {% endif %}
{% endif %}
