<!-- User Account: style can be found in dropdown.less -->
<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {% if currentUser.loggedIn %}
            {% if attribute(currentUser.get('attributes'), 'zpmpp:avatar') is defined %}
                {{ userAvatar(currentUser.get('uid'), {'class': 'user-image'}) }}
            {% else %}
                <img src="{{ zasset('@KaikmediaAdminLTETheme:images/default-user.png') }}" class="user-image" alt="{{ __('Avatar') }}>
                {% endif %}
                <span class="hidden-xs">  {{ currentUser.get('uname')|capitalize }}</span>
        {% else %}
            <img src="{{ zasset('@KaikmediaAdminLTETheme:images/default-user.png') }}" class="user-image" alt="{{ __('Avatar') }}">
            <span class="hidden-xs">{{ __('LOG IN') }}</span>
        {% endif %}
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            {% if currentUser.loggedIn %}
                {% if attribute(currentUser.get('attributes'), 'zpmpp:avatar') is defined %}
                    {{ userAvatar(currentUser.get('uid'), {'class': 'img-circle'}) }}
                {% else %}
                    <img src="{{ zasset('@KaikmediaAdminLTETheme:images/default-user.png') }}" class="img-circle" alt="User Image">
                {% endif %}
                <p>
                    {{ currentUser.get('uname')|capitalize }}
                    <small>{{ __('Member since') }} {{ currentUser.get('user_regdate')|date("M Y") }} </small>
                    <small>{{ __('Last logged in') }} {{ currentUser.get('lastlogin')|date("D M Y") }} </small>
                </p>
            {% else %}
                <img src="{{ zasset('@KaikmediaAdminLTETheme:images/default-user.png') }}" class="img-circle" alt="User Image">
                <span class="hidden-xs">{{ __('LOG IN') }}</span>
            {% endif %}
        </li>
        <!-- Menu Body -->
        <li class="user-body">
            <div class="row">
                <div class="col-xs-6 text-center">
                    {% if getSystemVar('profilemodule', FALSE) %}
                        {{ currentUser.get('uid')|profileLinkByUserId(class='classname', title=__('Profile')) }}
                        {#                        <a href="{{ path('zikulaprofilemodule_profile_display') }}" class=" ">{{ __('Profile') }}</a>#}
                    {% else %}

                    {% endif %}
                </div>
                <div class="col-xs-6 text-center">
                    <a href="#">{{ __('Change picture') }}</a>
                </div>
            </div>
            <!-- /.row -->
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ path('zikulausersmodule_account_menu') }}" class="btn btn-default btn-flat">{{ __('Account') }}</a>
            </div>

            <div class="pull-right">
                <a href="{{ path('zikulausersmodule_access_logout') }}" class="btn btn-default btn-flat">{{ __('Sign out') }}</a>
            </div>
        </li>
    </ul>
</li>